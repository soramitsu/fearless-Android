<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--fonts-->
    <attr name="fontSemiBold" format="reference" />
    <attr name="fontBold" format="reference" />
    <attr name="fontExtraBold" format="reference" />
    <attr name="fontRegular" format="reference" />
    <!--fonts-->

    <!--text sizes-->
    <attr name="textSizeH1" format="reference" />
    <attr name="textSizeH2" format="reference" />
    <attr name="textSizeH3" format="reference" />
    <attr name="textSizeH4" format="reference" />
    <attr name="textSizeH5" format="reference" />
    <attr name="textSizeCapsTitle" format="reference" />
    <attr name="textSizeB0" format="reference" />
    <attr name="textSizeB1" format="reference" />
    <attr name="textSizeB2" format="reference" />
    <attr name="textSizeB3" format="reference" />
    <!--text sizes-->

    <declare-styleable name="Toolbar">
        <attr name="titleText" format="string" />
        <attr name="iconRight" format="reference|color" />
        <attr name="textRight" format="string" />
        <attr name="homeButtonIcon" format="reference|color" />
        <attr name="homeButtonVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GlassyButton">
        <attr name="text" format="string" />
        <attr name="drawable" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="AddressView">
        <attr name="labelVisible" format="boolean" />
        <attr name="iconVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ElementChooserView">
        <attr name="enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LabeledTextView">
        <attr name="label" format="string" />
        <attr name="message" format="string" />
        <attr name="actionIcon" format="reference|color" />
        <attr name="textIcon" format="reference|color" />
        <attr name="enabled" />
        <attr name="android:singleLine" />
    </declare-styleable>

    <declare-styleable name="AccountInfoView">
        <attr name="accountActionIcon" format="reference|color" />
        <attr name="textVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="InputField">
        <attr name="android:inputType" />
        <attr name="android:text" />
    </declare-styleable>
</resources>