<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Font styles-->

    <style name="TextAppearance.Fearless.Header" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">?attr/fontBold</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header1" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeH1</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header2" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeH2</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header3" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeH3</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header4" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeH4</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header5" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeH5</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body0" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB0</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB1</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body2" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB2</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body3" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontSemiBold</item>
        <item name="android:textSize">?attr/textSizeB3</item>
    </style>

    <!--Font styles-->

    <!-- Buttons -->

    <style name="Widget.Fearless.Button.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">?attr/textSizeB1</item>
        <item name="android:fontFamily">?attr/fontBold</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:background">@drawable/bg_button_primary_selector</item>
    </style>

    <!-- Buttons -->

    <!-- Input -->

    <style name="Widget.Fearless.Input.Primary.External" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="hintTextColor">@color/colorHint</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCollapsedPaddingTop">@dimen/x1</item>
    </style>

    <style name="Widget.Fearless.Input.Primary.Internal" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_input_shape_selector</item>
        <item name="android:textAppearance">@style/TextAppearance.Soramitsu.Body1</item>
        <item name="android:paddingStart">@dimen/x2</item>
        <item name="android:paddingEnd">@dimen/x2</item>
        <item name="android:paddingTop">@dimen/x3</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- Input -->

    <!-- Dialog -->

    <style name="Widget.Fearless.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@anim/progress_rotate</item>
        <item name="android:indeterminateDuration">1300</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">600dp</item>
        <item name="android:background">@null</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/x2</item>
        <item name="cornerSizeTopLeft">@dimen/x2</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Dialog -->


    <!--   Bottom Navigation -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/soramitsu_regular</item>
    </style>

</resources>