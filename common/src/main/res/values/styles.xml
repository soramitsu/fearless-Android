<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Font styles-->

    <style name="TextAppearance.Fearless.Header" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">?attr/fontBold</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header1" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeH1</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header2" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeH2</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header3" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeH3</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header4" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeH4</item>
    </style>

    <style name="TextAppearance.Soramitsu.Header5" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeH5</item>
    </style>

    <style name="TextAppearance.Soramitsu.CapsTitle1" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeCapsTitle1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Soramitsu.CapsTitle2" parent="TextAppearance.Fearless.Header">
        <item name="android:textSize">?attr/textSizeCapsTitle2</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body0" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB0</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB1</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body1.WithDisabled">
        <item name="android:textColor">@color/button_text_colors</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body2" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB2</item>
    </style>

    <style name="TextAppearance.Soramitsu.Body3" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontSemiBold</item>
        <item name="android:textSize">?attr/textSizeB3</item>
    </style>

    <!--Font styles-->

    <!-- Buttons -->

    <style name="Widget.Fearless.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_text_colors</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">?attr/textSizeB1</item>
        <item name="android:fontFamily">?attr/fontBold</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="Widget.Fearless.Button.Primary">
        <item name="android:background">@drawable/bg_button_primary_selector</item>
    </style>

    <style name="Widget.Fearless.Button.Outline">
        <item name="android:background">@drawable/bg_button_outline_selector</item>
    </style>

    <style name="Widget.Fearless.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_text_colors</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">?attr/textSizeB1</item>
        <item name="android:fontFamily">?attr/fontBold</item>
    </style>

    <style name="Widget.Fearless.Button.Text.Normal">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">?attr/textSizeB1</item>
        <item name="android:fontFamily">?attr/fontRegular</item>
    </style>

    <style name="Widget.Fearless.Puller" parent="">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:background">@drawable/bg_puller</item>
    </style>

    <style name="Widget.Fearless.ActionButton" parent="TextAppearance.AppCompat.Body2">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTint">@color/actions_color</item>
        <item name="android:textColor">@color/actions_color</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="Widget.Fearless.Switch" parent="">
        <item name="android:background">@drawable/divider_drawable</item>
        <item name="android:textAppearance">@style/TextAppearance.Soramitsu.Body1</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <!-- Buttons -->

    <!-- Input -->

    <style name="Widget.Fearless.Input.Primary.External" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="hintTextColor">@color/colorHint</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCollapsedPaddingTop">@dimen/x1</item>
    </style>

    <style name="Widget.Fearless.Input.Primary.Internal" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.Soramitsu.Body1</item>
        <item name="android:paddingStart">@dimen/x2</item>
        <item name="android:paddingEnd">@dimen/x2</item>
        <item name="android:paddingTop">@dimen/x3</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- Input -->

    <!-- Dialog -->

    <style name="Widget.Fearless.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@anim/progress_rotate</item>
        <item name="android:indeterminateDuration">1300</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowBackground">@color/backgroundBlurColor</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">600dp</item>
        <item name="backgroundTint">@color/bottom_bar_grey</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/x2</item>
        <item name="cornerSizeTopLeft">@dimen/x2</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Dialog -->


    <!--   Bottom Navigation -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/sora_semibold</item>
    </style>

    <!-- Chip -->
    <style name="ChipQuickInput" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Soramitsu.CapsTitle2</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/black3</item>
    </style>
    <!-- Chip -->

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheetDialogThemeNoIme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">#00000000</item>
    </style>
</resources>