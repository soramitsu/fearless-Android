<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/badgeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:background="@drawable/bg_asset_badge"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/badgeIcon"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="2dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="4dp"
        tools:src="@drawable/ic_token_testnet" />

    <TextView
        android:id="@+id/badgeName"
        style="@style/TextAppearance.Soramitsu.Body3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_marginEnd="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/soramitsu_bold"
        android:includeFontPadding="false"
        android:lines="1"
        android:textAllCaps="true"
        android:textColor="@color/white_64"
        tools:text="@string/label_testnet" />
</merge>