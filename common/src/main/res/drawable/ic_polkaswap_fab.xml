<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="120dp"
        android:height="120dp"
        android:gravity="center">

        <shape
            android:shape="oval"

            android:useLevel="false" >

            <gradient
                android:type="radial"
                android:gradientRadius="42dp"
                android:startColor="@color/colorAccentDark"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <item>
        <ripple
            android:color="#66FF0066"
            android:radius="56dp">

            <item
                android:width="56dp"
                android:height="56dp"
                android:gravity="center">

                <shape
                    android:shape="oval">
                    <solid android:color="@color/white"/>
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_polkaswap_logo"
                android:width="40dp"
                android:height="40dp"
                android:gravity="center">
            </item>
        </ripple>
    </item>
</layer-list>
