<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dynamicListSheetItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/Widget.Fearless.Puller"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        style="@style/TextAppearance.Soramitsu.Header3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="@string/staking_validator_total_stake" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray3" />

    <jp.co.soramitsu.feature_staking_impl.presentation.validators.details.view.ValidatorTotalStakeItem
        android:id="@+id/validatorTotalStakeOwn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <jp.co.soramitsu.feature_staking_impl.presentation.validators.details.view.ValidatorTotalStakeItem
        android:id="@+id/validatorTotalStakeNominators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <jp.co.soramitsu.feature_staking_impl.presentation.validators.details.view.ValidatorTotalStakeItem
        android:id="@+id/validatorTotalStake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

</LinearLayout>