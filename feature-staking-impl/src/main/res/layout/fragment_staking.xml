<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/stakingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stakingTitle"
                style="@style/TextAppearance.Soramitsu.Header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:text="@string/staking_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/stakingAvatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:layout_gravity="end"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:src="@color/white" />

        </FrameLayout>

        <jp.co.soramitsu.feature_wallet_api.presentation.view.AssetSelectorView
            android:id="@+id/stakingAssetSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:backgroundStyle="blurred" />

        <ProgressBar
            android:id="@+id/contentProgress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:indeterminate="true"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/stakingLoadableContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <jp.co.soramitsu.feature_staking_impl.presentation.staking.main.view.RelayChainNetworkInfoView
                android:id="@+id/stakingNetworkInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:expanded="true" />

            <jp.co.soramitsu.feature_staking_impl.presentation.staking.main.view.ParachainNetworkInfoView
                android:id="@+id/parachainStakingNetworkInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:expanded="true"
                tools:visibility="gone" />

            <jp.co.soramitsu.feature_staking_impl.presentation.view.AlertsView
                android:id="@+id/stakingAlertsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone" />

            <jp.co.soramitsu.feature_staking_impl.presentation.view.StakeSummaryView
                android:id="@+id/stakingStakeSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/collatorsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:visibility="gone"
                tools:itemCount="2"
                tools:listitem="@layout/item_collator_delegation" />

            <jp.co.soramitsu.feature_staking_impl.presentation.staking.main.view.EstimateEarningView
                android:id="@+id/stakingEstimate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <jp.co.soramitsu.common.view.PrimaryButton
                android:id="@+id/startStakingBtn"
                style="@style/Widget.Fearless.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/staking_start_title"
                android:theme="@style/PinkOverlay"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>