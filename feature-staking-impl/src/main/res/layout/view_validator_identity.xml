<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        style="@style/TextAppearance.Soramitsu.Header4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/identityTitp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:includeFontPadding="false"
        android:text="@string/identity_title"
        android:textColor="@color/white" />

    <jp.co.soramitsu.featurestakingimpl.presentation.validators.details.view.ValidatorInfoItemView
        android:id="@+id/validatorIdentityLegalNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:validatorInfoItemTitle="@string/identity_legal_name_title" />

    <jp.co.soramitsu.featurestakingimpl.presentation.validators.details.view.ValidatorInfoItemView
        android:id="@+id/validatorIdentityEmailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:validatorInfoItemTitle="@string/identity_email_title"
        app:validatorInfoItemIcon="@drawable/ic_arrow_top_right_white_16" />

    <jp.co.soramitsu.featurestakingimpl.presentation.validators.details.view.ValidatorInfoItemView
        android:id="@+id/validatorIdentityWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:validatorInfoItemTitle="@string/identity_web_title"
        app:validatorInfoItemIcon="@drawable/ic_arrow_top_right_white_16" />

    <jp.co.soramitsu.featurestakingimpl.presentation.validators.details.view.ValidatorInfoItemView
        android:id="@+id/validatorIdentityTwitterView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:validatorInfoItemTitle="@string/identity_twitter_title"
        app:validatorInfoItemIcon="@drawable/ic_arrow_top_right_white_16" />

    <jp.co.soramitsu.featurestakingimpl.presentation.validators.details.view.ValidatorInfoItemView
        android:id="@+id/validatorIdentityRiotNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:validatorInfoItemTitle="@string/identity_riot_name_title" />

</merge>