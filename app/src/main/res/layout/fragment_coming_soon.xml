<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/drawable_background_image">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/comingSoonGif"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/coming_soon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/comingSoonLogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="35dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_logo_about"
        app:layout_constraintBottom_toTopOf="@+id/comingSoonLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/comingSoonLabel"
        style="@style/TextAppearance.Soramitsu.Header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coming_soon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <jp.co.soramitsu.common.view.PrimaryButton
        style="@style/Widget.Fearless.Button.Primary"
        android:layout_width="0dp"
        android:id="@+id/comingSoonDevStatus"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Check Dev Status"
        app:layout_constraintBottom_toTopOf="@+id/comingSoonRoadmap"
        app:layout_constraintEnd_toEndOf="@+id/comingSoonRoadmap"
        app:layout_constraintStart_toStartOf="@+id/comingSoonRoadmap" />

    <jp.co.soramitsu.common.view.PrimaryButton
        android:id="@+id/comingSoonRoadmap"
        style="@style/Widget.Fearless.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="Check Roadmap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
